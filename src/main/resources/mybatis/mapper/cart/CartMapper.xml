<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ecommerce.platform.domain.cart.mapper.CartMapper">

    <!-- Result Map -->
    <resultMap id="CartResultMap" type="com.ecommerce.platform.domain.cart.entity.Cart">
        <id property="id" column="id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <association property="user" javaType="com.ecommerce.platform.domain.user.entity.User">
            <id property="id" column="user_id"/>
        </association>
    </resultMap>

    <!-- 장바구니 저장 -->
    <insert id="insert" parameterType="com.ecommerce.platform.domain.cart.entity.Cart"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO carts (user_id, created_at, updated_at)
        VALUES (#{user.id}, NOW(), NOW())
    </insert>

    <!-- ID로 장바구니 조회 -->
    <select id="findById" resultMap="CartResultMap">
        SELECT id, user_id, created_at, updated_at
        FROM carts
        WHERE id = #{id}
    </select>

    <!-- 사용자 ID로 장바구니 조회 -->
    <select id="findByUserId" resultMap="CartResultMap">
        SELECT id, user_id, created_at, updated_at
        FROM carts
        WHERE user_id = #{userId}
    </select>

    <!-- 장바구니 삭제 -->
    <delete id="deleteById">
        DELETE FROM carts
        WHERE id = #{id}
    </delete>

    <!-- 사용자 ID로 장바구니 삭제 -->
    <delete id="deleteByUserId">
        DELETE FROM carts
        WHERE user_id = #{userId}
    </delete>

</mapper>