<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ecommerce.platform.domain.order.mapper.OrderMapper">

    <!-- Result Map -->
    <resultMap id="OrderResultMap" type="com.ecommerce.platform.domain.order.entity.Order">
        <id property="id" column="id"/>
        <result property="totalAmount" column="total_amount"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <association property="user" javaType="com.ecommerce.platform.domain.user.entity.User">
            <id property="id" column="user_id"/>
            <result property="email" column="user_email"/>
            <result property="name" column="user_name"/>
        </association>
        <collection property="orderItems" ofType="com.ecommerce.platform.domain.order.entity.OrderItem"
                    select="com.ecommerce.platform.domain.order.mapper.OrderItemMapper.findByOrderId"
                    column="id"/>
    </resultMap>

    <!-- 주문 저장 -->
    <insert id="insert" parameterType="com.ecommerce.platform.domain.order.entity.Order"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO orders (user_id, total_amount, status, created_at, updated_at)
        VALUES (#{user.id}, #{totalAmount}, #{status}, NOW(), NOW())
    </insert>

    <!-- ID로 주문 조회 -->
    <select id="findById" resultMap="OrderResultMap">
        SELECT o.id, o.user_id, o.total_amount, o.status, o.created_at, o.updated_at,
               u.email as user_email, u.name as user_name
        FROM orders o
        INNER JOIN users u ON o.user_id = u.id
        WHERE o.id = #{id}
    </select>

    <!-- 전체 주문 조회 (페이징) -->
    <select id="findAll" resultMap="OrderResultMap">
        SELECT o.id, o.user_id, o.total_amount, o.status, o.created_at, o.updated_at,
               u.email as user_email, u.name as user_name
        FROM orders o
        INNER JOIN users u ON o.user_id = u.id
        ORDER BY o.id DESC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- 전체 주문 개수 -->
    <select id="count" resultType="int">
        SELECT COUNT(*)
        FROM orders
    </select>

    <!-- 주문 상태 업데이트 -->
    <update id="updateStatus">
        UPDATE orders
        SET status = #{status},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 주문 삭제 -->
    <delete id="deleteById">
        DELETE FROM orders
        WHERE id = #{id}
    </delete>

</mapper>